load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")

package(default_visibility = ["//visibility:public"])

rust_library(
    name = "validation",
    srcs = glob(["src/**"]),
    crate_name = "ic_btc_validation",
    version = "0.1.0",
    deps = [
        # Keep sorted.
        "@crate_index//:bitcoin",
    ],
)

rust_test(
    name = "validation_test",
    crate = ":validation",
    data = [
        # Keep sorted.
        "tests/data/doge/headers_0_2499_mainnet_raw.csv",
        "tests/data/doge/headers_0_2499_testnet_raw.csv",
        "tests/data/doge/headers_1_2500_mainnet_parsed.csv",
        "tests/data/doge/headers_1_2500_testnet_parsed.csv",
        "tests/data/doge/headers_293100_294099_testnet_parsed_with_auxpow.csv",
        "tests/data/doge/headers_521337_522336_mainnet_parsed_with_auxpow.csv",
        "tests/data/headers.csv",
    ],
    deps = [
        # Keep sorted.
        "@crate_index//:csv",
        "@crate_index//:hex",
        "@crate_index//:rstest",
    ],
)
