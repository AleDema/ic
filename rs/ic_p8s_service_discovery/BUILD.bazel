MACRO_DEPENDENCIES = [
    "@crate_index//:slog_derive",
    "@crate_index//:strum_macros",
    "@crate_index//:gflags-derive",
]

DEV_DEPENDENCIES = [
    "//rs/test_utilities",
    "@crate_index//:itertools",
]

MACRO_DEV_DEPENDENCIES = []

ALIASES = {}

rust_library(
    name = "ic_p8s_service_discovery",
    srcs = glob(["src/**"]),
    aliases = ALIASES,
    crate_name = "ic_p8s_service_discovery",
    proc_macro_deps = MACRO_DEPENDENCIES,
    version = "0.8.0",
    deps = DEPENDENCIES,
)

rust_binary(
    name = "ic-p8s-sd",
    srcs = ["src/titanium/main.rs"],
    aliases = ALIASES,
    proc_macro_deps = MACRO_DEPENDENCIES,
    deps = DEPENDENCIES + [":ic_p8s_service_discovery"],
)

rust_binary(
    name = "ic-p8s-service-discovery",
    srcs = [
        "src/config/mod.rs",
        "src/config/nns.rs",
        "src/main.rs",
        "src/metrics.rs",
        "src/service_discovery.rs",
    ],
    aliases = ALIASES,
    proc_macro_deps = MACRO_DEPENDENCIES,
    deps = DEPENDENCIES + [":ic_p8s_service_discovery"],
)

rust_test(
    name = "ic_p8s_service_discovery_test",
    aliases = ALIASES,
    crate = ":ic_p8s_service_discovery",
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
    deps = DEPENDENCIES + DEV_DEPENDENCIES,
)

rust_test_suite(
    name = "ic_p8s_service_discovery_integration_tests",
    srcs = glob(["tests/**/*.rs"]),
    aliases = ALIASES,
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
    deps = [":ic_p8s_service_discovery"] + DEPENDENCIES + DEV_DEPENDENCIES,
)
