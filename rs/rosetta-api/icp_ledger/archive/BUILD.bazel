load("@rules_rust//rust:defs.bzl", "rust_test")
load("//bazel:canisters.bzl", "rust_canister")
load("//bazel:defs.bzl", "rust_ic_test")
load("//bazel:pocket-ic-tests.bzl", "test_using_pocket_ic_server")

package(default_visibility = ["//visibility:public"])

rust_canister(
    name = "ledger-archive-node-canister-wasm",
    srcs = ["src/main.rs"],
    compile_data = [
        "//rs/rosetta-api/icp_ledger:ledger_archive.did",
    ],
    crate_name = "ledger_archive_node",
    rustc_env = {
        "LEDGER_ARCHIVE_DID_PATH": "$(execpath //rs/rosetta-api/icp_ledger:ledger_archive.did)",
    },
    service_file = "//rs/rosetta-api/icp_ledger:ledger_archive.did",
    version = "0.9.0",
    deps = [
        # Keep sorted.
        "//rs/nns/constants",
        "//rs/rosetta-api/icp_ledger",
        "//rs/rosetta-api/ledger_canister_core",
        "//rs/rosetta-api/ledger_core",
        "//rs/rust_canisters/dfn_candid",
        "//rs/rust_canisters/dfn_core",
        "//rs/rust_canisters/dfn_http_metrics",
        "//rs/rust_canisters/dfn_protobuf",
        "//rs/types/base_types",
        "@crate_index//:candid",
        "@crate_index//:ciborium",
        "@crate_index//:ic-cdk",
        "@crate_index//:ic-metrics-encoder",
        "@crate_index//:lazy_static",
        "@crate_index//:serde",
    ],
)

rust_test(
    name = "ledger_archive_node_test",
    crate = "_wasm_ledger-archive-node-canister-wasm",
    data = [
        "//rs/rosetta-api/icp_ledger:ledger_archive.did",
    ],
    rustc_env = {
        "CARGO_MANIFEST_DIR": "rs/rosetta-api/icp_ledger/archive",
    },
    deps = ["@crate_index//:candid_parser"],
)

test_using_pocket_ic_server(
    name = "ledger_archive_node_canister_integration",
    srcs = ["tests/tests.rs"],
    data = [
        "//rs/rosetta-api/icp_ledger/archive:ledger-archive-node-canister-wasm",
    ],
    env = {
        "CARGO_MANIFEST_DIR": "rs/rosetta-api/icp_ledger/archive",
        "LEDGER_ARCHIVE_NODE_CANISTER_WASM_PATH": "$(rootpath //rs/rosetta-api/icp_ledger/archive:ledger-archive-node-canister-wasm)",
    },
    # Run this test using the mainnet version of the pocket-ic-server
    # but only run this test using the HEAD version of the pocket-ic server nightly.
    extra_HEAD_tags = ["fi_tests_nightly"],
    macro = rust_ic_test,
    deps = [
        # Keep sorted.
        "//packages/pocket-ic",
        "//rs/rosetta-api/icp_ledger",
        "//rs/rosetta-api/icp_ledger/test_utils",
        "//rs/rosetta-api/ledger_core",
        "//rs/rust_canisters/http_types",
        "//rs/types/base_types",
        "@crate_index//:candid",
        "@crate_index//:serde_bytes",
    ],
)
