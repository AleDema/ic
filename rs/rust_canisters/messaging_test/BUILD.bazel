load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test_suite")
load("//bazel:canisters.bzl", "rust_canister")

package(default_visibility = ["//visibility:public"])

DEPENDENCIES = [
    # Keep sorted
    "//packages/ic-error-types",
    "//rs/types/base_types",
    "//rs/types/types",
    "@crate_index//:candid",
    "@crate_index//:futures",
    "@crate_index//:ic-cdk",
    "@crate_index//:rand",
    "@crate_index//:serde",
    "@crate_index//:serde_bytes",
]

MACRO_DEPENDENCIES = [
]

rust_library(
    name = "messaging_test",
    srcs = ["src/lib.rs"],
    crate_name = "messaging_test",
    version = "0.1.0",
    deps = DEPENDENCIES,
)

rust_canister(
    name = "messaging-test-canister",
    srcs = ["src/main.rs"],
    proc_macro_deps = MACRO_DEPENDENCIES,
    service_file = ":messaging-test-canister.did",
    deps = DEPENDENCIES + [":messaging_test"],
)

rust_test_suite(
    name = "messaging_test_integration",
    srcs = [
        "tests/messaging_test.rs",
    ],
    deps = [
        # Keep sorted.
        ":messaging_test",
        "//rs/types/types",
        "@crate_index//:candid",
        "@crate_index//:serde",
        "@crate_index//:serde_bytes",
    ],
)
